format long
in = fopen('deformation/Polytech_maillage/mesh/man.mesh','r');

point = 'Vertices';

while ~strcmp(fgetl(in),point)
end

nb_point = str2num(fgetl(in));
disp(nb_point);
mat=zeros(nb_point,3);

for i=1:nb_point
    mat(i,:) =str2num(fgetl(in));
end

V = mat(:,1:2);
P=zeros(5,2);
P(1,:)=V(99,:);
P(2,:)=V(100,:);
P(3,:)=V(101,:);
P(4,:)=V(2500,:);
P(5,:)=V(1000,:);
Q=zeros(5,2);
Q(1,:)=0.2*V(1,:);
Q(2,:)=0.2*V(100,:);
Q(3,:)=0.3*V(500,:);
Q(4,:)=0.3*V(2500,:);
Q(5,:)=0.4*V(1000,:);
ptssol=zeros(length(V),2);

for i=1:length(V)
    ptssol(i,:)=affine2(P,V(i,:),Q);
end

